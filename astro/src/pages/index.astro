---
import Navbar from "../components/Navbar";
import Hero from "../components/Hero.astro";
import Why from "../components/Why.astro";
import Portfolio from "../components/Portfolio";
import WebsiteCreation from "../components/WebsiteCreation";
import ContactCTA from "../components/ContactCTA";
---

<html lang="en">
  <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    {/* SEO Optimized Meta Tags */}
    <title>Profesjonalne Strony Internetowe | Kompleksowe Usługi Webowe</title>
    <meta name="description" content="Tworzymy nowoczesne, responsywne strony internetowe dla firm. Projektujemy skuteczne rozwiązania online, które zwiększają Twoją widoczność i sprzedaż." />
    <meta name="keywords" content="strony internetowe, projektowanie stron, web design, strony www dla firm, responsywne strony, marketing internetowy" />
    


    <style>
      /* Global Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Poppins", sans-serif;
  min-height: 100vh;
  width: 100%;
  background: linear-gradient(to bottom right, #38b2ac, #3b82f6);
  color: white;
  padding: 20px;
}

/* Responsive Styles */
@media (max-width: 767px) {
  body {
    padding: 10px;
  }

  section {
    padding: 20px;
  }

  #hero h1 {
    font-size: 2.5rem;
  }

  #hero p {
    font-size: 1rem;
  }

  #why .card {
    width: 100%;
  }

  #portfolio .project {
    width: 100%;
  }

  #website-creation .features-list li {
    width: 100%;
  }

  #contact .cta-content {
    padding: 20px;
  }

  #contact .cta-content h2 {
    font-size: 1.8rem;
  }

  #contact .cta-content p {
    font-size: 1rem;
  }
}
    </style>
  </head>
  <body>
    <!--  <Navbar client:only /> -->
    <section id="hero">
      <Hero />
    </section>

    <section id="why">
      <Why />
    </section>

    <section id="portfolio">
      <Portfolio client:load />
    </section>

    <section id="website-creation">
      <WebsiteCreation />
    </section>

    <section id="contact">
      <ContactCTA />
    </section>
  </body>
</html>
